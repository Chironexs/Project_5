@model PlanFood.Mvc.Models.ViewModel.LogInViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.Partial("_ValidationScriptsPartial");
}

@Html.Partial("_LayoutLogOutHeader")

<section class="dashboard-section">
    <div class="container pt-4 pb-4">
        <div class="border-dashed view-height">
            <div class="container w-25">
                <form asp-controller="Account" asp-action="Login" method="post" class="padding-small text-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h1 class="text-color-darker">Logowanie</h1>
                    <div class="form-group">
                        <input asp-for="UserName" type="email" class="form-control" id="username" name="username" placeholder="podaj adres email">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" id="password" name="password" placeholder="podaj hasło">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-color rounded-0" type="submit">Zaloguj</button>
                </form>
            </div>
        </div>
    </div>
</section>

