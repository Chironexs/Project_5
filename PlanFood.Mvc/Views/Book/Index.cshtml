                    <th scope="col" class="col-5">AUTOR</th>
                    <th scope="col" class="col-1">ISBN</th>
                </tr>
            </thead>
            <tbody class="text-color-lighter">
            @foreach (var book in Model)
            {
                <tr class="d-flex">
                    <th scope="row" class="col-1">@book.Id</th>
                    <td class="col-5">@book.Title</td>
                    <td class="col-4">@book.Author</td>
                    <td class="col-2">@book.Isbn</td>
                </tr>
            }
            </tbody>
        </table>
    </section>
