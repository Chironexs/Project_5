@model ICollection<PlanFood.Mvc.Models.Db.Recipe>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_LayoutLogInHeader")

<section class="dashboard-section">
    <div class="row dashboard-nowrap">
        
        @Html.Partial("_LayoutFlexColumnMenu")

        <div class="m-4 p-3 width-medium">
            <div class="dashboard-content border-dashed p-3 m-4 view-height">
                <div class="row border-bottom border-3 p-1 m-1">
                    <div class="col noPadding"><h3 class="color-header text-uppercase">Lista Przepisów</h3></div>
                    <div class="col noPadding d-flex justify-content-end mb-2"><a asp-controller="Recipe" asp-action="Add" class="btn btn-success rounded-0 pt-0 pb-0 pr-4 pl-4">Dodaj przepis</a></div>
                </div>
                <table class="table border-bottom schedules-content">
                    <thead>
                        <tr class="d-flex text-color-darker">
                            <th scope="col" class="col-1">ID</th>
                            <th scope="col" class="col-2">NAZWA</th>
                            <th scope="col" class="col-7">OPIS</th>
                            <th scope="col" class="col-2 center">AKCJE</th>
                        </tr>
                    </thead>
                    <tbody class="text-color-lighter">
                        @{
                            int count = 1;
                         }

                        @foreach (var recipe in Model)
                        {
                            <tr class="d-flex">
                                <th scope="row" class="col-1">@count</th>
                                <td class="col-2">
                                    @recipe.Name
                                </td>
                                <td class="col-7">@recipe.Description</td>
                                <td class="col-2 d-flex align-items-center justify-content-center flex-wrap">
                                    <a asp-controller="Recipe" asp-action="Remove" asp-route-id="@recipe.Id" class="btn btn-danger rounded-0 text-light m-1">Usuń</a>
                                    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info rounded-0 text-light m-1">Szczegóły</a>
                                    <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-warning rounded-0 text-light m-1">Edytuj</a>
                                </td>
                            </tr>

                            {
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
